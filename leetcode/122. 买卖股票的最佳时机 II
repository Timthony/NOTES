class Solution {
public:
    int maxProfit(vector<int>& prices) {
        //贪心策略
        if(prices.size() == 0)  return 0;
        int profit=0;
        
        for(int i=0;i<prices.size()-1;i++)
        {
            if(prices[i+1] > prices[i])
            {
                profit = profit + (prices[i+1]-prices[i]);
            }
            
        }
        
        return profit;
        
        
        
        
        
        
    }
};
